<h1 class="text-center">Restaurants</h1>
<div class="flex flex-col items-center justify-center w-full mx-auto my-8">
  <%= link_to "Add a Restaurant", new_restaurant_path, class:"btn btn-primary mt-2" %>
</div>
<div class="flex flex-col items-center justify-center mx-auto my-8">
  <% @restaurants.each do |resto| %>
    <div class="text-center">
      <h2 class="text-primary text-xl font-semibold"><%= link_to resto.name, restaurant_path(resto) %></h2>
      <p class="text-secondary text-sm"><%= resto.address %></p>
    </div>
  <% end %>
</div>
